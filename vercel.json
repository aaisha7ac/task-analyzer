{
  "version": 2,
  "builds": [
    {
      "src": "backend/task_analyzer/wsgi.py", // <-- Correct Django WSGI path
      "use": "@vercel/python" 
    },
    {
      "src": "frontend/**", // <-- Correct Static files path
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/task_analyzer/wsgi.py" // <-- Directs all requests to Django
    }
  ]
}